{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Joined</th>
                <th>Firstname</th>
                <th>Lastnam</th>
                <th>Address</th>
                <th>Housenr</th>
                <th>Houseadd</th>
                <th>Phonenumber</th>
                <th>Email</th>
                <th>Countorders</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.password }}</td>
                 {#
                <td>{% if entity.joined %}{{ entity.joined|date('Y-m-d H:i:s') }}{% endif %}</td>
                #}

                <td>{{ entity.firstname }}</td>
                <td>{{ entity.lastnam }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.housenr }}</td>
                <td>{{ entity.houseadd }}</td>
                <td>{{ entity.phonenumber }}</td>
                <td>{{ entity.email }}</td>
                {#
                <td>{{ entity.countorders }}</td>
                #}
                <td>
                <ul>
                    <li>
                        <a href="{{ path('user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('user_new') }}">
                Create a new entry
            </a>

            {#
            <a href="{{ path('/logout') }}">
                Logout
            </a>
            #}

            
        </li>
    </ul>
    {% endblock %}
